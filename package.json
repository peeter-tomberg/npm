{
  "name": "npm",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "lint": "lerna run lint --stream --parallel",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "test": "jest --config .config/jest/jest.config.js --verbose",
    "test:watch": "jest --config .config/jest/jest.config.js --watch --verbose",
    "publish": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "commitmsg": "validate-commit-msg"
  },
  "validate-commit-msg": {
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "chore",
      "revert"
    ],
    "autoFix": true,
    "helpMessage": "The commit message does not follow https://github.com/angular/angular/blob/master/CONTRIBUTING.md#commit spec",
    "warnOnFail": false
  },
  "release": {
    "prepare": [],
    "publish": [
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "analyzeCommits": {
      "preset": "angular"
    }
  },
  "author": "Peeter Tomberg <peeter.tomberg@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@peetertomberg/mongo-repository": "file:packages/mongo-repository",
    "@peetertomberg/registry": "file:packages/registry"
  },
  "devDependencies": {
    "@types/jest": "24.0.6",
    "validate-commit-msg": "2.14.0",
    "jest": "24.1.0",
    "lerna": "3.13.0",
    "semantic-release": "^15.13.3",
    "semantic-release-monorepo": "^6.1.1",
    "ts-jest": "24.0.0",
    "tslint": "5.12.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.3.3"
  }
}
